<!DOCTYPE html>
<html>
  <head>
    <title>YouReviewAnime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div> 
      <% if logged_in?%>
      <%= link_to 'All Anime', animes_path %> |
      <%= link_to 'Add a Review', new_review_path %> |
      <%= link_to 'All Reviews', reviews_path %> |
      <%= link_to 'My Reviews', review_path(current_user.reviews) %> |
      <%= link_to 'Home Page', user_path(current_user) %> |
      <%= link_to 'Log Out', logout_path, method: "delete" %>
      <% end %>

  <%= yield %>
  </body>
</html>
