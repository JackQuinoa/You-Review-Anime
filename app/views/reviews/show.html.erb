<h1> Here are your reviews!</h1>
<% if @reviews.none? %>
        <h3> You don't have any reviews yet! </h3>
    <% else %>
        <% @reviews.each do |r| %>
        <li>
        <%= r.anime.title %> |
        <%= r.rating %> |
        <%= r.content %> |
        <%= link_to 'edit', edit_review_path(r) %>
    </li>
    <% end %>
    <% end %>

