<h1> Edit your review for <%= @review.anime.title %>!</h1>

<%= render partial: "layouts/errors", locals: {object: @review} %>

<%= form_for(@review) do |f| %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.label :content %> 
    <%= f.text_field :content %> 
    
    <%= f.submit %> 

<% end %>