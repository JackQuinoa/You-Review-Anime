<% if @review.anime %>
Make a review for <%= @review.anime.title %>
<% else %> 
<h1> New Review! </h1>
<% end %>

<%= form_for([@review.anime,@review]) do |f| %>
    <% if !@review.anime %>
        <%= f.label :anime %>
        <%= f.collection_select :anime_id, Anime.all, :id, :title %> 
    <% else %> 
        <%= f.hidden_field :anime_id %>
    <% end %> 

    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <%= f.label :content %> 
    <%= f.text_field :content %> 
    <%= f.submit %> 
<% end %>